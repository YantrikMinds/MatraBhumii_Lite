<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@android:color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="8dp">


        <!-- Welcome Text -->


        <!-- Crop Disease Detection Card -->
        <TextView
            android:id="@+id/tvWelcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="24dp"
            android:text="Welcome to MatraBhumi"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="24sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:gravity="center_vertical"
            android:background="@drawable/rounded_bg"
            android:layout_marginBottom="12dp"
            android:onClick="openCropDiseaseActivity">

            <ImageView
                android:layout_width="52dp"
                android:layout_height="53dp"
                android:layout_marginEnd="16dp"
                android:src="@drawable/img_crop_disease" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Crop Disease Detection"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>


        <!-- Fertilizer Recommendation -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:gravity="center_vertical"
            android:background="@drawable/rounded_bg"
            android:layout_marginBottom="12dp"
            android:onClick="openFertilizerActivity">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/img_fertilizer"
                android:layout_marginEnd="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fertilizer Recommendation"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Krishi FAQ -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:gravity="center_vertical"
            android:background="@drawable/rounded_bg"
            android:layout_marginBottom="12dp"
            android:onClick="openKrishiFaqActivity">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/img_faq"
                android:layout_marginEnd="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Krishi FAQ"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Profit Calculator -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:gravity="center_vertical"
            android:background="@drawable/rounded_bg"
            android:layout_marginBottom="12dp"
            android:onClick="openProfitCalculatorActivity">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/img_profit_calc"
                android:layout_marginEnd="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Profit Calculator"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>


        <!-- Crop Calendar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:gravity="center_vertical"
            android:background="@drawable/rounded_bg"
            android:layout_marginBottom="12dp"
            android:onClick="openCropCalendarActivity">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/img_crop_calendar"
                android:layout_marginEnd="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Crop Calendar"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- inventory tracker -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:gravity="center_vertical"
            android:background="@drawable/rounded_bg"
            android:layout_marginBottom="12dp"
            android:onClick="openInventoryActivity">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/inventory_header"
                android:layout_marginEnd="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Inventory Tracker"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>



        <!-- Govt. Schemes -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:gravity="center_vertical"
            android:background="@drawable/rounded_bg"
            android:layout_marginBottom="12dp"
            android:onClick="openSchemesActivity">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/img_govt_schemes"
                android:layout_marginEnd="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Govt. Schemes"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Mandi Prices -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:gravity="center_vertical"
            android:background="@drawable/rounded_bg"
            android:layout_marginBottom="12dp"
            android:onClick="openMarketPriceActivity">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/img_mandi_price"
                android:layout_marginEnd="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mandi Prices"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Farmer Notes -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:gravity="center_vertical"
            android:background="@drawable/rounded_bg"
            android:layout_marginBottom="12dp"
            android:onClick="openFarmerNotesActivity">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/img_farmer_notes"
                android:layout_marginEnd="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Farmer Notes"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>



        <androidx.cardview.widget.CardView
            android:layout_width="359dp"
            android:layout_height="80dp"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="12dp"
            android:layout_marginHorizontal="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="6dp"
            android:onClick="openOrganicFarming">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="12dp">

                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:contentDescription="Organic Farming"
                    android:src="@drawable/img_organic" />

                <TextView
                    android:layout_width="240dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingStart="16dp"
                    android:text="Organic Farming"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="359dp"
            android:layout_height="80dp"
            android:layout_marginBottom="12dp"
            android:layout_marginHorizontal="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="6dp"
            android:onClick="openPestControl">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="12dp">

                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@drawable/img_pest"
                    android:contentDescription="Pest Control" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="Pest Control"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:paddingStart="16dp"
                    android:textColor="#000000" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="359dp"
            android:layout_height="80dp"
            android:layout_marginBottom="16dp"
            android:layout_marginHorizontal="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="6dp"
            android:onClick="openSoilHealth">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="12dp">

                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@drawable/img_soil"
                    android:contentDescription="Soil Health" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="Soil Health"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:paddingStart="16dp"
                    android:textColor="#000000" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>




    </LinearLayout>
</ScrollView>